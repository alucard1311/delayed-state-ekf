<?xml version="1.0"?>
<!--
  Material and visual definitions for AUV simulation
  These are included inline in auv.xml but kept here as reference.
  Can be included via <include file="materials.xml"/> if needed.
-->

<definitions>
    <materials>
        <!-- Physical materials -->
        <material name="Aluminium" density="2710.0" restitution="0.7"/>
        <material name="Polyurethane" density="1100.0" restitution="0.5"/>
        <material name="Steel" density="7891.0" restitution="0.9"/>

        <friction_table>
            <friction material1="Aluminium" material2="Aluminium" static="0.7" dynamic="0.4"/>
            <friction material1="Polyurethane" material2="Polyurethane" static="0.6" dynamic="0.3"/>
            <friction material1="Steel" material2="Steel" static="0.4" dynamic="0.1"/>
        </friction_table>
    </materials>

    <looks>
        <!-- AUV body appearance -->
        <look name="AUV_Hull" rgb="0.9 0.5 0.1" roughness="0.3" metalness="0.2"/>
        <look name="Thruster" rgb="0.2 0.2 0.2" roughness="0.5" metalness="0.8"/>
        <look name="Propeller" rgb="0.7 0.7 0.0" roughness="0.4" metalness="0.6"/>

        <!-- Environment -->
        <look name="Seabed" rgb="0.5 0.4 0.3" roughness="0.9"/>
        <look name="Rock" gray="0.4" roughness="0.8"/>
    </looks>
</definitions>
